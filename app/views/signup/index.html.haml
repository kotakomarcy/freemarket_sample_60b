.wapper
  .header
    = link_to root_path do
      = image_tag "fmarket_logo_red.svg", width:"185px", class: "header__logo"
  .sign-up
    .sign-up__registration
      新規会員登録
    .form
      = link_to users_signup_registration_path, class: "form__link" do
        .form__mail
          = fa_icon 'envelope', class: "form__icon"
          %span<>
          メールアドレスで登録する
      = link_to user_facebook_omniauth_authorize_path, method: :post , class: "form__link" do
        .form__facebook
          = fa_icon 'facebook-square', class: "form__icon"
          %span<>
          Facebookで登録する
      = link_to user_google_oauth2_omniauth_authorize_path, method: :post , class: "form__link" do
        .form__google
          = image_tag "google_icon.jpg", width:"20px", class: "form__icon"
          %span<>
          Googleで登録する
    = render partial: 'signup-footer'