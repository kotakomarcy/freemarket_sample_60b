.wapper
  .header
    = link_to root_path do
      = image_tag "fmarket_logo_red.svg", width:"185px", class: "header__logo"
  .login
    .login__registration
      .login__message
        アカウントをお持ちで無い方はこちら
      = link_to signup_index_path do
        .login__new-registration
          新規会員登録
    .login-form
      = link_to user_facebook_omniauth_authorize_path, method: :post , class: "login-form__link" do
        .login-form__facebook
          = fa_icon 'facebook-square', class: "login-form__icon"
          %span<>
            Facebookでログイン
      = link_to user_google_oauth2_omniauth_authorize_path, method: :post , class: "login-form__link" do
        .login-form__google
          = image_tag "google_icon.jpg", width:"20px", class: "login-form__icon"
          %span<>
            Googleでログイン
      .login-form__mail
        = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          .login-form__address
          = f.text_field :email, class:"login-form__input-long", placeholder: "メールアドレス"
          .login-form__password
          = f.password_field :password, class:"login-form__input-long", placeholder: "パスワード"
          .recaptcha
            = recaptcha_tags
          .login-form__submit
            = f.submit "ログイン", class: 'login-btn'
      .password-forget
        = link_to root_path do
          パスワードをお忘れの方
  .footer
    = render partial: './signup/signup-footer'